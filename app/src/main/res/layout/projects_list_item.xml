<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:text="The Project's Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ProjectList_Title"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Here is a short description of the project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProjectList_Title"
        android:id="@+id/Project_Info_Text" />

    <TextView
        android:text="Due 12/12/2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Project_Info_Text"
        android:id="@+id/Duedate_Text" />

    <TextView
        android:text="5 Collaborators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/ProjectList_Title"
        android:id="@+id/TeamMates_Text" />

</RelativeLayout>