<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.stream.stream.UIFragments.CalendarFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        app:srcCompat="@drawable/info_gray"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/new_meeting_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view3"
        android:layout_below="@+id/new_meeting_description"
        android:layout_marginTop="13dp"
        android:layout_alignLeft="@+id/new_meeting_description"
        android:layout_alignStart="@+id/new_meeting_description" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view5"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_alignLeft="@+id/new_meeting_location"
        android:layout_alignStart="@+id/new_meeting_location" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        app:srcCompat="@drawable/location_icon_gray"
        android:id="@+id/imageView3"
        android:layout_below="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/new_meeting_location"
        android:maxLength = "30"
        android:hint="Location"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Description"
        android:ems="10"
        android:maxLength = "30"
        android:background="@null"
        android:minHeight="50px"
        android:id="@+id/new_meeting_description"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/new_meeting_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        app:srcCompat="@drawable/calendar_gray"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/new_meeting_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_meeting_time"
        android:textSize="16dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/new_meeting_date"
        android:layout_alignStart="@+id/new_meeting_date"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/new_meeting_date"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/view5"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="New meeting"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:background="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:gravity="center"
        android:elevation="@dimen/small_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="center"
        android:hint="Meeting Name"
        android:maxLength = "28"
        android:background="@null"
        android:textSize="24dp"
        android:ems="10"
        android:id="@+id/new_meeting_name"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Create Meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_new_meeting"
        android:textColor="#FFFFFF"
        android:background="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
