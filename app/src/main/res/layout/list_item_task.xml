<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/com_facebook_blue"
    android:paddingBottom="10dp">

    <TextView
        android:text="Task Title"
        android:textColor="@color/white"
        android:id="@+id/item_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:padding="4dp"/>

    <TextView
        android:text="Task Description"
        android:textColor="@color/white"
        android:id="@+id/item_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_below="@id/item_task_title"
        android:padding="4dp"/>

    <TextView
        android:text="Task Due Date"
        android:textColor="@color/white"
        android:id="@+id/item_task_duedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="15dp"
        android:layout_below="@id/item_task_description"
        android:padding="4dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completeButton"
        android:text="MARK AS COMPLETED"
        android:textColor="@color/white"
        android:background="@color/com_facebook_blue"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_task_duedate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>