<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.test.stream.stream.UIFragments.ProjectHomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ListView android:id="@+id/task_list"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <com.github.lzyzsd.circleprogress.CircleProgress
        android:id="@+id/team_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        custom:circle_progress="20"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/task_list"
        android:layout_alignStart="@+id/task_list"
        android:layout_marginTop="50dp" />

    <com.github.lzyzsd.circleprogress.CircleProgress
        android:id="@+id/user_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/task_list"
        android:layout_alignEnd="@+id/task_list"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:text="Your Progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_progress"
        android:layout_alignRight="@+id/user_progress"
        android:layout_alignEnd="@+id/user_progress"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="Team Progress"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/user_progress"
        android:layout_alignLeft="@+id/team_progress"
        android:layout_alignStart="@+id/team_progress" />

</RelativeLayout>
