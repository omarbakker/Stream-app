<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding">

    <TextView
        android:text="The Task's Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:id="@+id/TaskList_Title"
        android:textSize="21sp"
        android:textColor="@color/darkBlueTextColor"
        android:textStyle="normal" />

    <TextView
        android:text="Assigned To: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TaskList_Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:id="@+id/Task_Info_Text" />

    <TextView
        android:text="Due 12/12/2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskDuedate_Text"
        android:layout_below="@id/Task_Info_Text"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>



</RelativeLayout>