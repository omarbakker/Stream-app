<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#f9f9f9">

    <!--ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/pinTitleScrollView"
        android:layout_marginTop="10dp"-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:layout_alignParentTop="true"
            android:text="Title"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/titleText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:id="@+id/viewPinTitle"
            android:layout_below="@+id/titleText"/>
    <!--/ScrollView-->

    <!--ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinSubtitleScrollView"
        android:layout_below="@+id/pinTitleScrollView"
        android:layout_marginTop="10dp"-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="Subtitle"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/subtitleText"
        android:layout_below="@+id/viewPinTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:id="@+id/viewPinSubtitle"
            android:layout_below="@+id/subtitleText"/>
    <!--/ScrollView-->

    <!--ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinDescriptionScrollView"
        android:layout_below="@+id/pinSubtitleScrollView"
        android:layout_marginTop="10dp"-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="Description"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/descriptionText"
        android:layout_below="@+id/viewPinSubtitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:id="@+id/viewPinDescription"
            android:layout_below="@+id/descriptionText"
            />
    <!--/ScrollView-->

</RelativeLayout>
