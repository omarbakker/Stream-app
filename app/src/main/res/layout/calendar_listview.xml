<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:weightSum="1">

    <View android:id="@+id/expandedViewMeeting"
        android:layout_width="match_parent"
       android:layout_height="50dp"
        android:background="#660066"
       android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:id="@+id/view6"
        android:layout_below="@+id/expandedViewMeeting"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meeting_time"
        android:textColor="#000000"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/expandedViewMeeting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toLeftOf="@+id/meeting_description"
        android:layout_toStartOf="@+id/meeting_description" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meeting_description"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/meeting_date"
        android:layout_toRightOf="@+id/view6"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/meeting_date" />

    <TextView
        android:text="Meeting name"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/meeting_name"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/meeting_time"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/meeting_date"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/meeting_time"
        android:layout_alignLeft="@+id/meeting_time"
        android:layout_alignStart="@+id/meeting_time"
        android:layout_alignRight="@+id/view6"
        android:layout_alignEnd="@+id/view6"
        android:layout_alignBottom="@+id/view6" />

    <TextView
        android:text="Meeting Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/meeting_location"
        android:layout_alignBaseline="@+id/meeting_time"
        android:layout_alignBottom="@+id/meeting_time"
        android:layout_alignLeft="@+id/meeting_description"
        android:layout_alignStart="@+id/meeting_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>